<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
 
<configuration>
 <property require-input="true">
    <name>ipython.user</name>
    <description>iPython Notebook Linux Username</description>
    <value>ipython</value>
 </property>
 <property require-input="true">
    <name>ipython.group</name>
    <description>iPython Notebook Linux Group</description>
    <value>ipython</value>
 </property>
 <property require-input="true">
    <name>log.dir</name>
    <description>iPython Notebook Logs Directory</description>
    <value>/var/log/ipython-notebook</value>
 </property>
 <property require-input="true">
    <name>num.executors</name>
    <description>Default number of Spark executors</description>
    <value>2</value>
 </property>
 <property require-input="true">
    <name>executor.memory</name>
    <description>Defaault memory for Spark executors</description>
    <value>512M</value>
 </property>
</configuration>
